import turtle
t=turtle.Turtle()
r=turtle.Turtle()
r.penup()
r.goto(50,50)
r.pendown()
r.color("red")
r.begin_fill()
for i in range(8):
  r.forward(50)
  r.right(45)
r.end_fill()
r.color("white")
r.penup()
r.goto(75,-20)
r.pendown()
r.write("STOP", align="center", font=("typewriter", 16, "bold italic"))
r.ht()
t.color("green")
t.shape("turtle")
t.penup()
t.backward(200)
while t.xcor() <0:
  t.forward(1)
  t.write(t.xcor(),align="center", font=("typewriter", 16, "bold italic"))
  t.clear()
