import turtle
import random
t=turtle.Turtle()
t.speed(0)
r=random.randint(100,255)
g=random.randint(100,255)
b=0
for i in range(180):
  t.color(r,g,b)
  t.forward(100)
  t.right(30)
  t.forward(20)
  t.left(60)
  t.forward(50)
  t.right(30)
  t.penup()
  t.goto(0,0)
  t.pendown()
  t.right(2)
  b+=2
