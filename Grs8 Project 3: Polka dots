import turtle 
import random
t=turtle.Turtle()
screen=turtle.Screen()
t.speed(0)
t.colormode(255)
t.goto(0,0)
def Circle():
  t.begin_fill()
  r=random.randint(0,255)
  g=random.randint(0,255)
  b=random.randint(0,255)
  size=random.randint(1,10)
  t.color (r,g,b)
  for i in range(36):
    t.forward(size)
    t.right(10)
  t.end_fill()
def apple(x,y):
  t.penup()
  t.goto(x,y)
  t.pendown()
  Circle()
screen.onclick(apple)
